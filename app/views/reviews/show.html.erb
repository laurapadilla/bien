<% content_for :page_title, @review.title %>

<h1>
  <%= @review.title %>
</h1>

<p class="score">
  <%= @review.score %> / 10
</p>

<p class="restaurant">
<%= @review.restaurant %>
</p>

<% if @review.ambiance.present? %>
  <p class="ambiance">
    Ambiance:  <%= @review.ambiance %>
  </p>
<% end %>

<div class="body">
  <%= simple_format @review.body %>
</div>

<section class="actions">
    <%= link_to "Edit review", edit_review_path(@review) %>
    <%= button_to "Delete review", review_path(@review), method: :delete, onclick: "return confirm('Are you sure??')"  %>
</section>
